<h3> Your Title :<%= @article.title %></h3>

<p> Your Text :<%= @article.text %></p>



<% @article.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <p><%= link_to 'Delete Comment',article_comment_path(article_id: comment.article_id , id: comment.id), method: :delete, data: { confirm: 'Are you sure?'}%></p>
<% end %>

<h2> You can Add a comment here :</h2>
<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Back', articles_path%>